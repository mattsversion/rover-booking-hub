<h2 style="margin-top:0;">Clients</h2>

<div class="list">
  <% if (!clients.length) { %>
    <div class="card muted">No private clients yet.</div>
  <% } %>

  <% clients.forEach(c => { const s = stats[c.id] || { count: 0, confirmed: 0, last: null }; %>
    <a class="row card" href="/clients/<%= c.id %>">
      <div style="flex:1;">
        <div style="font-weight:700;"><%= c.name || '—' %></div>
        <div class="muted"><b>Phone:</b> <%= c.phone %></div>
        <div class="muted">
          <b>Bookings:</b> <%= s.count %>
          • <b>Confirmed:</b> <%= s.confirmed %>
          <% if (s.last) { %> • <b>Last:</b> <%= new Date(s.last.startAt).toLocaleDateString() %> <% } %>
        </div>
      </div>
      <div class="muted"><%= c.trusted ? 'Trusted ✅' : '' %></div>
    </a>
  <% }) %>
</div>
