generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Booking {
  id          String    @id @default(cuid())
  // enums replaced with String:
  source      String
  externalId  String?
  clientName  String
  clientPhone String?
  roverRelay  String?
  clientEmail String?
  // removed Json field (use Pet table instead):
  // pets        Json?
  dogsCount   Int       @default(1)
  serviceType String
  startAt     DateTime
  endAt       DateTime
  // enum replaced with String:
  status      String    @default("PENDING")
  rateCents   Int?
  notes       String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  messages    Message[]
  pets        Pet[] // renamed relation to plural for clarity
}

model Message {
  id        String   @id @default(cuid())
  bookingId String?
  booking   Booking? @relation(fields: [bookingId], references: [id])
  // enums replaced with String:
  direction String
  channel   String
  fromLabel String?
  toLabel   String?
  body      String
  createdAt DateTime @default(now())
}

model Block {
  id        String   @id @default(cuid())
  startAt   DateTime
  endAt     DateTime
  reason    String
  createdAt DateTime @default(now())
}

model Pet {
  id           String   @id @default(cuid())
  bookingId    String
  booking      Booking  @relation(fields: [bookingId], references: [id])
  name         String
  breed        String?
  ageYears     Int?
  weightLbs    Float?
  instructions String?
  photoUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
