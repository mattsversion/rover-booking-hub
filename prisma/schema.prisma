generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id          String   @id @default(cuid())
  // enums replaced with String:
  source      String
  externalId  String?
  clientName  String
  clientPhone String?
  roverRelay  String?
  clientEmail String?
  // removed Json field (use Pet table instead):
  // pets        Json?
  dogsCount   Int      @default(1)
  serviceType String
  startAt     DateTime
  endAt       DateTime
  // enum replaced with String:
  status      String   @default("PENDING")
  rateCents   Int?
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // NEW: relation to Client
  clientId    String? // nullable so Rover-only bookings still work
  client      Client?  @relation(fields: [clientId], references: [id], onDelete: SetNull)

  messages Message[]
  pets     Pet[] // renamed relation to plural for clarity
}

model Message {
  id        String   @id @default(cuid())
  bookingId String?
  booking   Booking? @relation(fields: [bookingId], references: [id])

  direction String
  channel   String
  fromLabel String?
  toLabel   String?
  body      String
  createdAt DateTime @default(now())

  toPhone   String?
  isQueued  Boolean   @default(false)
  sentAt    DateTime?
  failCount Int       @default(0)

  eid                   String  @unique
  platform              String?
  threadId              String?
  providerMessageId     String?
  fromPhone             String?
  isBookingCandidate    Boolean @default(false)
  extractedKeywordsJson String?
  extractedDatesJson    String?

  // NEW: mark inbound messages as read after opening booking
  isRead Boolean @default(false)

  updatedAt DateTime @default(now()) @updatedAt
  classifyScore      Float?    // 0..1 confidence
  classifyLabel      String?   // e.g. "BOOKING_REQUEST" | "GENERAL" | "SPAM"
  extractedJson      Json?     // { startAt, endAt, serviceType, dogsCount, clientName }
}

model PushSub {
  id        String   @id @default(cuid())
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())
}

model Block {
  id        String   @id @default(cuid())
  startAt   DateTime
  endAt     DateTime
  reason    String
  createdAt DateTime @default(now())
}

model Pet {
  id           String   @id @default(cuid())
  bookingId    String
  booking      Booking  @relation(fields: [bookingId], references: [id])
  name         String
  breed        String?
  ageYears     Int?
  weightLbs    Float?
  instructions String?
  photoUrl     String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Client {
  id        String   @id @default(cuid())
  phone     String   @unique
  name      String?
  notes     String?
  isPrivate Boolean  @default(true)
  trusted   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // back-reference (one-to-many)
  bookings Booking[]
}
